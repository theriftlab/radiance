{
    "name": "theriftlab/radiance",
    "description": "Conversions and operations between various angle and coordinate formats.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "RiftLab\\Radiance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RiftLab\\Radiance\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Robert Davies",
            "email": "robert@theriftlab.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "pestphp/pest": "^2.28"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
